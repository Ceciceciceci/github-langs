              <script>
                chart()
              </script>
            </div>
            <p>
              <h4 style="display:{{showLanguage}}"> Language(s) : </h4>
              {{#each languages}} {{@key}}: {{this}}, {{/each}}
            </p>
          </div>
          <div class="mastfoot">
