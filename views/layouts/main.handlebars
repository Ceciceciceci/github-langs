    <div class="site-wrapper">
      <div class="site-wrapper-inner">
        <div class="cover-container">
          <center>
          <div class="inner cover">
            <br><br>
            <a style="text-decoration:none; color:white" href='./' title='Back to home'><h1 class="cover-heading">GitHub Language Checker</h1> </a>

            <br>
            <form id="search-form" action="" method="get" action="#">
              <input type="text" autofocus="autofocus" name="username" placeholder="Github username" required>
              <button type="submit" name="">Search</button>
            </form>
          </div>
          <br>

          <!-- test form -->


          <h3>{{msg}}</h3>
          <div class="result" style="display:{{showResult}}">
            <img class="img-circle" src='{{avatar}}'>
            <br>
            <a class="username" href="https://github.com/{{username}}" title="go to {{username}}'s github page" target="_blank"><caption>{{username}}</caption></a>
            <h4> {{repos}}</h4>
            ===
            <p>
              <h4 style="display:{{showLanguage}}"> Language(s) : </h4>
              {{#each languages}}
                {{@key}}: {{this}},
              {{/each}}
            </p>
          </div>
          <div class="mastfoot">
            <div class="inner">
              <p style="color:white">Disclaimer : This site is a fan made and not affiliated with GitHub.</p>
            </div>
